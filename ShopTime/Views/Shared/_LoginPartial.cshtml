@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager

@{
    ViewData["Title"] = "_LoginPartial";
}

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  id="manage" class="nav-link text-light" asp-controller="Account" asp-action="Details" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-controller="Account" asp-action="logout">
            <button  id="logout" type="submit" class="nav-link btn btn-link text-light">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-light" id="register" asp-controller="Account" asp-action="register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-light" id="login" asp-controller="Account" asp-action="login">Login</a>
    </li>
}
</ul>