@model ShopTime.Models.Booking

@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <hr />
    <div class="row">
        <div class="col-md-4">
            <h2>Enter shop now</h2>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div type="hidden" class="form-group">
                    @*<label type="hidden" asp-for="OwnerId" class="control-label"></label>*@
                    <input type="hidden" asp-for="OwnerId" class="form-control" />
                    <span type="hidden" asp-validation-for="OwnerId" class="text-danger"></span>
                </div>
                <div type="hidden" class="form-group">
                    @*<label type="hidden" asp-for="BookingState" class="control-label"></label>*@
                    <input type="hidden" asp-for="BookingState" value="InShop" class="form-control" />
                    <span type="hidden" asp-validation-for="BookingState" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @*<label type="hidden" asp-for="ShopId" class="control-label"></label>*@
                    <input type="hidden" asp-for="ShopId" class="form-control" />
                    <span type="hidden" asp-validation-for="ShopId" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    @*<label type="hidden" asp-for="BookingTime" class="control-label"></label>*@
                    <input type="hidden" asp-for="BookingTime" value="2020-11-17" class="form-control" />
                    <span type="hidden" asp-validation-for="BookingTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Enter Shop" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>